ADVISOR_HOST=0.0.0.0
ADVISOR_PORT=8787

# LLM provider: auto | openai | ollama
ADVISOR_LLM_PROVIDER=openai

# OpenAI (recommended for public deployment)
OPENAI_API_KEY=sk-xxxx
OPENAI_MODEL=gpt-5-mini

# Ollama fallback (optional)
OLLAMA_BASE=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.1:8b

# Advisor behavior
ADVISOR_FAST_MODE=0
ADVISOR_PRECISION_MODE=high
ADVISOR_INTERPRETATION_LEVEL=3
ADVISOR_ENFORCE_YEAR_ISOLATION=1
ADVISOR_THINKING_TRACE=1
ADVISOR_DEBUG_TRACE_LIMIT=500

# Centralized memory
ADVISOR_SESSION_PERSIST=1
ADVISOR_SESSION_TTL_MS=86400000
ADVISOR_SESSION_LIMIT=5000
ADVISOR_SESSION_STORE_FILE=./.advisor_sessions.json
